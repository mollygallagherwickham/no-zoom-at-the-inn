<html>
<body>

<h1 id="title"> No Zoom at the Inn</h1>

<p id="countdown"></p>
<script>
    // Set the date we're counting down to
    var countDownDate = new Date("Dec 26, 2022 00:00:00").getTime();
 
    // Get today's date and time
    var now = new Date().getTime();
    // Find the distance between now and the count down date
    var distance = countDownDate - now;
    // Time calculations for days, hours, minutes and seconds
    var days = Math.floor(distance / (1000 * 60 * 60 * 24));

    // Display the result in the element with id="coundown"
    if (days === 1) {
        document.getElementById("countdown").innerHTML = days + " sleep";
    }
    else if (days > 1) {
        document.getElementById("countdown").innerHTML = days + " sleeps";
    }
    else if (days === 0) {
        document.getElementById("countdown").innerHTML = "Merry Christmas";
    }
    else {
        document.getElementById("countdown").innerHTML = "Put Your Tinsel Away.";
    }
    

    
</script>
{{{body}}}
</body>
</html>